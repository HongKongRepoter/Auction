<div class="index">
    @if(ViewBag.Err!=null) {
    <div class="alert alert-danger">
        <strong>Error:</strong> @ViewBag.Err
    </div>
    }
    <div class="index-cont" class="container">
        @model Auctions.Models.RegisterViewModel
        <h1>Register</h1>
        <form asp-controller="Home" asp-action="Register" method="POST">
            <div class="form-group">
                <label asp-for="Username">Username:</label>
                <span class="err" asp-validation-for="Username"></span>
                <input class="form-control" asp-for="Username">
            </div>
            <div class="form-group">
                <label asp-for="FirstName">First Name:</label>
                <span class="err" asp-validation-for="FirstName"></span>
                <input class="form-control" asp-for="FirstName">
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name:</label>
                <span class="err" asp-validation-for="LastName"></span>
                <input class="form-control" asp-for="LastName">
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <span class="err" asp-validation-for="Password"></span>
                <input class="form-control" asp-for="Password">
            </div>
            <div class="form-group">
                <label asp-for="C_Password">Confirm Password:</label>
                <span class="err" asp-validation-for="C_Password"></span>
                <input class="form-control" asp-for="C_Password">
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div id="line-sep"></div>
    <div class="index-cont" class="container">
        <h1>Login</h1>
        <form asp-controller="Home" asp-action="Login" method="POST">
            <div class="form-group">
                <label for="LogUser">Username:</label>
                <input class="form-control" name="LogUser">
            </div>
            <div class="form-group">
                <label for="LogPassword">Password:</label>
                <input class="form-control" type="password" name="LogPassword">
            </div>
            <button type="submit" class="btn btn-info">Login</button>
        </form>
    </div>
</div>